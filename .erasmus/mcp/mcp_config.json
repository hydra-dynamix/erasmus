{
    "mcpServers": {
        "github": {
            "command": ".erasmus/mcp/servers/github/server",
            "args": [
                "stdio",
                "--log-file",
                ".erasamus/logs/github_mcp_server.log",
                "--enable-command-logging"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_PERSONAL_ACCESS_TOKEN"
            }
        }
    }
}